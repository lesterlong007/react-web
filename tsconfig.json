{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "src": ["src"],
      "@": ["src"],
      "@local-lib": ["local-lib"],
      "@lib": ["src/neo-common-mini-lib"]
    }
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "config/"]
}
